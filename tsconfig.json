{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"dom",
			"dom.iterable",
			"es2023",
			"webworker"
		],
		"allowJs": true,
		// Base URL now points at the physical Shake-Streamkit-NW directory (previously hit the `src` symlink).
		"baseUrl": "Shake-Streamkit-NW",
		"jsx": "react-jsx",
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,

		"strict": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,

		"types": [
			"react",
			"react-dom",
			"react-redux",
			"type-fest",
			"vite/client",
			"vitest/globals"
		],
		// Paths still resolve relative to baseUrl, so "@/modules/*" expands to Shake-Streamkit-NW/modules/* without further changes.
		"paths": {
			"@/*": ["modules/*"]
		}
	},
	// Vite/Vitest now operate solely on the physical Shake-Streamkit-NW tree,
	// so TypeScript no longer needs the legacy `src` symlink entry.
	"include": [
		"Shake-Streamkit-NW",
		"types"
	],
	// Before: included `src` for compatibility with the symlink.
	// After: only the physical folder plus shared types remain; run `npm start` and `npm test` to confirm type checking and resolution behave.
	// baseUrl before/after: src -> Shake-Streamkit-NW (unchanged here, but now fully aligned with include entries).
}
